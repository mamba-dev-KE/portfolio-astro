---
import Socials from "./Socials.astro";

const navData: Array<"Projects" | "Technologies"> = [
  "Projects",
  "Technologies",
];
---

<header class="fixed top-0 right-0 left-0 backdrop-blur-sm grad">
  <div class="flex justify-between items-center w-fluid h-20 mx-auto">
    <div class="text-2xl font-bold flex gap-3 items-center">
      <span class="font-titan uppercase text-3xl text-white tracking-widest"
        >Joseph</span
      >
    </div>
    <nav class="hidden sm:block">
      <ul class="flex gap-5">
        {
          navData.map((navItem) => (
            <li class="relative cursor-pointer font-inter font-bold text-xl hover:text-white transition-all duration-300">
              {navItem}
            </li>
          ))
        }
      </ul>
    </nav>
    <Socials />
  </div>
</header>

<style>
  li::after {
    content: "";
    width: 100%;
    height: 0.2rem;

    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;

    background-color: hsl(51, 100%, 50%);
    opacity: 0;
    transition: opacity 300ms ease-in-out;
  }
  li:hover::after {
    display: block;
    opacity: 1;
  }
</style>
