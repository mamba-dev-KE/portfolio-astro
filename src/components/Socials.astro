---
import github from "assets/images/github.svg";
import linkedin from "assets/images/linkedin.svg";
import twitter from "assets/images/twitter.svg";
---

<div class="flex gap-3 backdrop-blur-lg p-2 rounded-[100vmax]">
  <img class="w-7 rounded-full" src={github} alt="github icon" />
  <img class="w-7 rounded-full" src={linkedin} alt="linkedin icon" />
  <img class="w-7 rounded-full" src={twitter} alt="twitter icon" />
</div>
<style>
  div {
    filter: saturate(100%);
    background-image: linear-gradient(
      290deg,
      hsl(51, 100%, 50%),
      hsl(51, 100%, 50%) 20%,
      hsl(0, 0%, 68%) 70%
    );
  }
  img {
    /* filter: blur(2px); */
  }
</style>
